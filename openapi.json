{
  "openapi": "3.0.0",
  "info": {
    "title": "VicTutor Law RSS API",
    "version": "1.0.0",
    "description": "API לחיפוש פסקי דין או מאמרים משפטיים לפי מילות מפתח מתוך law.co.il"
  },
  "servers": [
    {
      "url": "https://law-rss.onrender.com",
      "description": "Render Deployment"
    }
  ],
  "paths": {
    "/search": {
      "get": {
        "operationId": "search_law_rss",
        "summary": "חיפוש לפי מילת מפתח מה־RSS של law.co.il",
        "parameters": [
          {
            "name": "keyword",
            "in": "query",
            "required": true,
            "description": "מילת מפתח לחיפוש (למשל: פרטיות, זכויות יוצרים, פטנטים)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "רשימת תוצאות מהפיד",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "date": {
                        "type": "string"
                      },
                      "link": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
